# Development Environment Configuration
ENVIRONMENT=development

# API Gateway Configuration
API_GATEWAY_PORT=8080
JWT_SECRET=dev_jwt_secret_key_change_in_production
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# Database Configuration (Development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=system_control_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Service Users Configuration
USERS_SERVICE_PORT=8081
USERS_SERVICE_URL=http://localhost:8081

# Service Orders Configuration
ORDERS_SERVICE_PORT=8082
ORDERS_SERVICE_URL=http://localhost:8082

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT=stdout

# Events Configuration
EVENTS_PUBLISHER=inmemory
EVENTS_BUFFER_SIZE=100

# Development Features
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_ENDPOINTS=true
CORS_ALLOW_ALL_ORIGINS=true

# Performance Settings (Development)
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s

# Security Settings (Relaxed for Development)
BCRYPT_COST=10
SESSION_TIMEOUT=24h

# Test Environment Configuration
ENVIRONMENT=test

# API Gateway Configuration
API_GATEWAY_PORT=8080
JWT_SECRET=test_jwt_secret_key_for_testing_only
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Database Configuration (Test)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=system_control_test
DB_USER=postgres
DB_PASSWORD=postgres

# Service URLs (Test)
USERS_SERVICE_PORT=8081
USERS_SERVICE_URL=http://localhost:8081
ORDERS_SERVICE_PORT=8082
ORDERS_SERVICE_URL=http://localhost:8082

# Logging Configuration (Test)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Events Configuration
EVENTS_PUBLISHER=inmemory
EVENTS_BUFFER_SIZE=1000

# Test Features
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_ENDPOINTS=true
CORS_ALLOW_ALL_ORIGINS=true
ENABLE_TEST_ROUTES=true

# Performance Settings (Test)
DB_MAX_OPEN_CONNS=20
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=600s

# Security Settings (Test)
BCRYPT_COST=8
SESSION_TIMEOUT=2h

# Test-specific Settings
TEST_DATA_CLEANUP=true
MOCK_EXTERNAL_SERVICES=true
PARALLEL_TEST_EXECUTION=true

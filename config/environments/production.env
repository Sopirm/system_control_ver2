# Production Environment Configuration
ENVIRONMENT=production

# API Gateway Configuration
API_GATEWAY_PORT=8080
JWT_SECRET=${JWT_SECRET_FROM_VAULT}
RATE_LIMIT_RPS=5
RATE_LIMIT_BURST=10

# Database Configuration (Production)
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Service URLs (Production - use service discovery)
USERS_SERVICE_PORT=8081
USERS_SERVICE_URL=${USERS_SERVICE_URL}
ORDERS_SERVICE_PORT=8082
ORDERS_SERVICE_URL=${ORDERS_SERVICE_URL}

# Logging Configuration (Production)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/var/log/system_control/app.log
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=30

# Events Configuration (Production)
EVENTS_PUBLISHER=kafka
KAFKA_BROKERS=${KAFKA_BROKERS}
KAFKA_TOPIC=system_control_events
EVENTS_BUFFER_SIZE=10000

# Production Features
ENABLE_SWAGGER_UI=false
ENABLE_DEBUG_ENDPOINTS=false
CORS_ALLOW_ALL_ORIGINS=false
CORS_ALLOWED_ORIGINS=${CORS_ALLOWED_ORIGINS}

# Performance Settings (Production)
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=50
DB_CONN_MAX_LIFETIME=1800s
DB_CONN_MAX_IDLE_TIME=300s

# Security Settings (Production)
BCRYPT_COST=14
SESSION_TIMEOUT=8h
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELIST=true
ALLOWED_IPS=${ALLOWED_IPS}

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30s
ENABLE_PROFILING=false

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_FILE=${TLS_CERT_FILE}
TLS_KEY_FILE=${TLS_KEY_KEY_FILE}

# Cache Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
CACHE_TTL=3600s
